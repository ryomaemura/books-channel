<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: [@board, @comment], local: true) do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', rows: 6 %>
      </div>
      <%= f.submit 'Post', class: 'btn btn-dark btn-block' %>
    <% end %>
  </div>
</div>